#include <iostream>
using namespace std;
int main()
{
	setlocale(0, "ru");
	int a=1, b=0, c, d, e, n;
	cout << "Последовательность Фибонначи"<< endl<<"\n";
	cout << "Введите количество элементов последовательности n= " ; cin >> n;
	cout << "Последовательность Фибоначчи: ";
	for (int i = 0; i <= n; i++) {
		if (i % 2 == 0) {
			a = a + b;
			c = a;
		}
		else {
			b = b + a;
			c = b;
		}
		cout << c << " ";
	}

}
